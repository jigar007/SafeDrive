<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/main"
    android:background="#ffffff"
    tools:context="com.unimelb.jigarthakkar.safedrivesystem.LoginSignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sign Up or Log In"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/sign"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/sign"
        android:background="#4169E1"
        android:textColor="#FFFDE7"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/log"
        android:background="#4169E1"
        android:textColor="#FFFDE7"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/sign"
        android:layout_alignEnd="@+id/sign"
        android:layout_alignStart="@+id/sign" />

</RelativeLayout>
